<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textViewStyle">@style/ProximaNovaTextViewStyle</item>
        <item name="materialButtonStyle">@style/ProximaNovaButtonStyle</item>
        <item name="editTextStyle">@style/ProximaNovaEditTextStyle</item>
        <item name="textInputStyle">@style/TextInputLayoutAppearance</item>
    </style>

    <style name="ThemeToolbar" parent="AppTheme">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="ProximaNovaTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/proximanova_regular</item>
    </style>

    <style name="ProximaNovaButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/proximanova_regular</item>
    </style>

    <style name="ProximaNovaEditTextStyle" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:fontFamily">@font/proximanova_regular</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:fontFamily">@font/proximanova_regular</item>
    </style>

</resources>
